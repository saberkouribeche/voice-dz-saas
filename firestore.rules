rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. قواعد المستخدمين (Users)
    match /users/{userId} {
      // السماح بالقراءة والكتابة فقط لصاحب الحساب
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // المدراء يمكنهم قراءة كل المستخدمين (لغرض الإدارة)
      allow read: if isAdmin();
    }

    // 2. طلبات الدفع (Payment Requests)
    match /payment_requests/{requestId} {
      // المستخدم العادي يمكنه إنشاء طلب وقراءة طلباته فقط
      allow create: if request.auth != null;
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // المدير يمكنه قراءة وتحديث الطلبات (للقبول والرفض)
      allow read, update: if isAdmin();
    }

    // 3. السجلات (Logs/History)
    match /logs/{logId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null; // عادة السجلات تُنشأ من السيرفر، لكن للسماح بالكتابة من الكلاينت إذا لزم
    }
    
    // دالة مساعدة للتحقق من المدير
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'saber@voicedz.com';
    }
  }
}
